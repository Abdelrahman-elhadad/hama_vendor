<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_item"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/my_cart2"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ring_secand_myorder"
                android:layout_width="97dp"
                android:padding="1dp"
                android:layout_height="115dp"
                app:srcCompat="@drawable/khatema" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gold_rin"
                android:layout_width="77dp"
                android:layout_height="36dp"
                android:layout_marginTop="20dp"
                android:textSize="15sp"
                android:fontFamily="@font/cairobold"
                android:textColor="@color/blackcolor1"
                android:text="@string/gold_ring" />



            <TextView
                android:id="@+id/pro"
                android:layout_width="72dp"
                android:fontFamily="@font/cairoregular"
                android:textColor="@color/blackcolor1"
                android:layout_height="30dp"
                android:layout_marginTop="25dp"
                android:textSize="13sp"
                android:text="150KWD" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="133dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/garpeg_secand"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="@string/productt"
                android:textSize="14sp"
                android:fontFamily="@font/cairosemibold"
                android:textColor="@color/hkhk"
                android:layout_marginStart="100dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:id="@+id/his"
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="90dp"
                android:fontFamily="@font/cairosemibold"
                android:textColor="@color/hkhk"
                android:layout_height="wrap_content"
                android:text="@string/min" />
        </LinearLayout>
        <View
            android:layout_width="5dp"
            android:layout_height="85dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="20dp"
            android:background="@drawable/back_view_order">

        </View>
    </LinearLayout>

</LinearLayout>