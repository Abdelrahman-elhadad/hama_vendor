<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <View
        android:id="@+id/view10"
        android:layout_width="52dp"
        android:layout_marginTop="15dp"
        android:background="@color/color_navigation1"
        android:layout_gravity="center"
        android:layout_height="5dp" />

    <TextView
        android:id="@+id/textView46"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:textColor="@color/blackcolor1"
        android:fontFamily="@font/cairobold"
        android:textSize="14dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="@string/add14" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Product_Name"
            android:fontFamily="@font/cairoregular"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:layout_marginTop="10dp"
            android:hint="@string/gold_ring"
            android:textColorHint="@color/blackcolor"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:background="@drawable/back_edit_txt"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView26" />
        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Main_Price"
            android:fontFamily="@font/cairoregular"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:ems="10"
            android:hint="150"
            android:textColorHint="@color/blackcolor"
            android:background="@color/hkhkhkh"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView29" />
        <TextView
            android:id="@+id/textView299"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Offer_Ratio"
            android:fontFamily="@font/cairoregular"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName4" />

        <Spinner
            android:id="@+id/spinner3"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/back_edit_txt"
            app:layout_constraintTop_toBottomOf="@+id/textView299"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView13"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="@+id/spinner3"
            app:layout_constraintTop_toTopOf="@+id/spinner3"
            app:srcCompat="@drawable/ic_icon_ionic_ios_arrow_back" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/New_Price"
            android:fontFamily="@font/cairoregular"
            android:textSize="14dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text"
            android:layout_marginStart="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/spinner3" />

        <EditText
            android:id="@+id/editTextTextPersonName12"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="80dp"
            android:ems="10"
            android:paddingStart="10dp"
            android:inputType="textPersonName"
            android:background="@drawable/back_spinner"
            android:hint="1000"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/textView55"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:text="KWD"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/cairolight"
            android:textSize="14dp"
            android:textColor="@color/black"
            android:layout_marginTop="40dp"
            android:background="@drawable/back_spinner2"
            app:layout_constraintStart_toEndOf="@+id/editTextTextPersonName12"
            app:layout_constraintTop_toBottomOf="@+id/spinner3" />

        <Button
            android:id="@+id/button3"
            android:layout_width="192dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginEnd="2dp"
            android:background="@color/dgdg"
            android:gravity="center"
            android:text="@string/CONFIRM"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName12" />

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/cairobold"
            android:text="@string/BACK_TO_OFFERS"
            android:textColor="@color/dgdg"
            android:textSize="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button3" />

    </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>