<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:layout_marginBottom="16dp">

    <TextView
        android:id="@+id/tv_name_ar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/cairoregular"
        android:gravity="start"
        android:textColor="@color/blackcolor1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/cairoregular"
        android:gravity="start"
        android:textColor="@color/blackcolor1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/cairoregular"
        android:gravity="start"
        android:textColor="@color/blackcolor1"
        android:textSize="16sp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_market"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:fontFamily="@font/cairoregular"
        android:gravity="start"
        android:textColor="@color/blackcolor1"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:fontFamily="@font/cairoregular"
        android:gravity="start"
        android:textColor="@color/blackcolor1"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_oval_grey">

        <View
            android:id="@+id/tv_color"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="1dp"
            android:background="@drawable/shape_oval_ttee_dark" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_edit"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/accept_order"
        app:srcCompat="@drawable/ic_edit" />

    <ImageView
        android:id="@+id/iv_delete"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:contentDescription="@string/accept_order"
        app:srcCompat="@drawable/ic_delete_2" />

</LinearLayout>