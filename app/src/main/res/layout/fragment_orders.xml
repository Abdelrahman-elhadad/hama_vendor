<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="hama.alsaygh.kw.vendor.view.order.OrdersViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/parent_my_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_orders"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/tab_back"
            app:tabBackground="@drawable/tab_selector"
            app:tabIndicatorColor="#00ffffff"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/ghhg"
            app:tabTextAppearance="@style/customfontstyle"
            app:tabTextColor="@color/color_store_page" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp_orders"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" />

    </LinearLayout>
</layout>