<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/back_item">

    <ImageView
        android:id="@+id/ring7"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:padding="1dp"
        app:srcCompat="@drawable/khatema" />

    <ImageView
        android:id="@+id/ring2"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:padding="1dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ring7"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/khatemb" />

    <ImageView
        android:id="@+id/ring3"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:layout_below="@+id/ring7"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:padding="1dp"
        app:srcCompat="@drawable/khatemb" />

    <ImageView
        android:id="@+id/ring4"
        android:layout_width="48dp"
        android:layout_height="57dp"
        android:padding="1dp"
        android:layout_below="@+id/ring7"
        android:layout_toEndOf="@+id/ring3"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/khatemb" />


    <TextView
        android:id="@+id/gold_ring11"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@+id/garpeg"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/ring2"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/cairobold"
        android:lines="2"
        android:text="@string/gold_ring"
        android:textColor="@color/blackcolor1"
        android:textSize="15sp"
        android:gravity="start"
        android:textAlignment="viewStart"/>

    <TextView
        android:id="@+id/kwd150"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/gold_ring11"
        android:layout_alignStart="@+id/gold_ring11"
        android:fontFamily="@font/cairobold"
        android:lines="1"
        android:layout_marginTop="30dp"
        android:text="150KWD"

        android:textColor="@color/my_cart1"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/garpeg"
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginTop="8dp"
        android:text="@string/productt"
        android:textSize="14dp"
        android:fontFamily="@font/cairosemibold"
        android:textColor="@color/hkhk"
        android:layout_toStartOf="@+id/viewStatus" />


    <TextView
        android:id="@+id/history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/ring4"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/cairosemibold"
        android:textColor="@color/hkhk"
        android:layout_toStartOf="@+id/viewStatus"
        android:text="@string/min" />

    <View
        android:id="@+id/viewStatus"
        android:layout_width="5dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ring4"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:background="@drawable/back_view_order" />


</RelativeLayout>

