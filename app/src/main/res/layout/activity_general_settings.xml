<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="hama.alsaygh.kw.vendor.view.generalSettings.GeneralSettingViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/transparent_color">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_back"
                android:layout_width="25dp"
                android:layout_height="15dp"
                android:layout_gravity="start"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/backk" />

            <TextView
                android:id="@+id/home1"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:fontFamily="@font/cairobold"
                android:text="@string/Store_Rate1"
                android:textColor="@color/blackcolor1"
                android:textSize="20sp" />
        </androidx.appcompat.widget.Toolbar>

        <View
            android:id="@+id/view969"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/blackcolor" />


            <TextView
                android:id="@+id/language_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/ic_subject"
                android:fontFamily="@font/cairosemibold"
                android:text="@string/Language_Settings"
                android:textColor="@color/my_profile"
                android:textSize="16sp"
                android:onClick="@{model::onLanguageClick}"
                 />


        <View
            android:id="@+id/view12"
            android:layout_width="310dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back_my_profile" />


            <TextView
                android:id="@+id/textView81"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/ic_notification__2_"
                android:fontFamily="@font/cairosemibold"
                android:text="@string/Language_Settings2"
                android:textColor="@color/my_profile"
                android:textSize="16sp"
                android:onClick="@{model::onNotificationClick}"
                />


        <View
            android:id="@+id/view11"
            android:layout_width="310dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back_my_profile" />



            <TextView
                android:id="@+id/textView82"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/ic_path_13411"
                android:fontFamily="@font/cairosemibold"
                android:text="@string/Language_Settings3"
                android:textColor="@color/my_profile"
                android:textSize="16sp"
                android:onClick="@{model::onChangePasswordClick}"/>


        <View
            android:id="@+id/view13"
            android:layout_width="310dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back_my_profile" />



            <TextView
                android:id="@+id/textView83"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:drawablePadding="20dp"
                app:drawableStartCompat="@drawable/ic_icon_feather_link_2"
                android:fontFamily="@font/cairosemibold"
                android:text="@string/Language_Settings7"
                android:textColor="@color/my_profile"
                android:textSize="16sp"
                android:onClick="@{model::onSocialMediaClick}"/>


        <View
            android:id="@+id/view14"
            android:layout_width="310dp"
            android:layout_height="0.5dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/back_my_profile" />
    </LinearLayout>
</layout>